<style lang="less">
@font-face {
    font-family: 'iconfont';
    src: url(data:application/font-woff2;charset=utf-8;base64,) format('woff2'),
        url(data:application/font-woff;charset=utf-8;base64,) format('woff'),
        url('iconfont.ttf') format('truetype'),
        url('iconfont.svg#iconfont') format('svg');
    font-weight: normal;
    font-style: normal;
}
.information-mask{
	display: none;
	position: fixed;
	width: 100%;
	height: 100%;
	z-index: 10000;
	pointer-events: none;
}

.information-show{
	display: block;
}

.information{
	position: absolute;
  bottom: 0;
  width: 100%;
	margin: 0 auto;
  height: 300rpx;
	opacity: 1;
	overflow: hidden;
  border-top: 10px solid gray;
	background-color: #fff;
	padding: 20px;
  box-sizing:border-box;
	font-size: 14px;
	line-height: 18px;
	word-break: break-all;
	/* transform: translateX(-50%) translateY(-50%); */
	animation: slideInUp .3s ;
  .word{
    font-size: 16pt;
    font-weight: 400;
    color:rgb(32, 158, 133);
  }
  .pron{
    color:gray;
    margin-left: 10rpx;
  }
  .audio{
    font-family: 'iconfont';
    float:right;
    margin-top:30rpx;
    color:rgb(32, 158, 133);
    &:before{
      content: '\e65f';
      margin-right: 10rpx;
      font-size: 10pt;
    }
  }
  .definition{
    margin-top: 16rpx;
    .definition-item{
      display: block;
    }
  }
}
.slidedown{
  animation: slideOutDown .3s;
}

@keyframes slideInUp {
  from {
    transform: translate3d(0, 100%, 0);
    visibility: visible;
  }

  to {
    transform: translate3d(0, 0, 0);
  }
}
@keyframes slideOutDown {
  from {
    transform: translate3d(0, 0, 0);
  }

  to {
    visibility: hidden;
    transform: translate3d(0, 100%, 0);
  }
}

</style>

<template>
	<view class="information-mask" :class="{information-show:!!visible,slidedown:isSlidingDown}">
		<view class="information" style="{{cssText}}" @tap.stop="stopPropagation">
      <text class="word">{{word}}</text>
      <text class="pron">{{pron}}</text>
      <audio class="audio" id="information" src="{{audio}}"/>
      <view class="definition">
        <repeat for="{{definition}}">
          <text class="definition-item">{{item}}</text>
        </repeat>
      </view>
    </view>
	</view>
</template>

<script>
import wepy from 'wepy'

export default class TipBox extends wepy.component {
  data = {
    visible: false,
    position: '',
    margin: '',
    word: '',
    audio: '',
    pron: '',
    definition: '',
    isSlidingDown: false
  };

  computed = {
    cssText() {
      let styles = {}
      if (this.position === 'top') {
        styles.position = this.position
        styles.top = this.margin || ''
      } else if (this.position === 'bottom') {
        styles.position = this.position
        styles.top = 'initial'
        styles.bottom = this.margin || ''
      }
      let css = Object.keys(styles)
      .map(key => (key + ':' + styles[key]))
      .join(';')
      return css
    }
  };
  methods={
    stopPropagation(e) {
      console.log(e)
      e.stopPropagation()
    }
  }
  show({word, options}) {
    if (!word) {
      return
    }
    wx.request({
      url: `https://api.shanbay.com/bdc/search/?word=${word}`,
      success: (res) => {
        if (res.data.msg === 'SUCCESS') {
          var {audio, pron, definition} = res.data.data
          this.audio = audio
          this.pron = pron ? `/${pron}/` : ''
          this.definition = definition.split(/\r\n|\n|\r/)
        } else {
          this.definition = [].concat(res.data.msg)
        }
        this.$apply()
      }
    })
    let conf = Object.assign({
      position: '',
      margin: '0'
    }, options)

    // this.hide()

    this.position = conf.position
    this.margin = conf.margin
    this.visible = true
    this.word = word
    this.audio = ''
    this.pron = ''
    this.definition = ''
    console.log(this.audioCtx)
    this.$apply()

    // if (this.timer) {
    //   clearTimeout(this.timer)
    //   this.timer = null
    // }
    // this.timer = setTimeout(() => this.hide(), 2000)
  }

  hide() {
    this.isSlidingDown = true
    this.$apply()
    setTimeout(() => {
      this.visible = false
      this.word = ''
      this.audio = ''
      this.pron = ''
      this.definition = ''
      this.position = ''
      this.margin = ''
      this.isSlidingDown = false
      this.$apply()
    }, 300)
  }
  onReady (e) {
    // 使用 wx.createAudioContext 获取 audio 上下文 context
    this.audioCtx = wx.createAudioContext('information')
  }
}
</script>
